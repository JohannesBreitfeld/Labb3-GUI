<Window x:Class="QuizConfigurator.Dialogs.ApiStatusDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizConfigurator.Dialogs"
        mc:Ignorable="d"
        Title="Import status" Height="150" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap"  
                       TextAlignment="Center" 
                       Text="{Binding StatusMessage}"
                       Margin="20"/>
            <Button Content="OK" Padding="5" Width="75" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
